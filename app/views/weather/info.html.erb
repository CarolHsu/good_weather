<%- unless @information.empty?  %>
<div id="information" class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1 class="display-3">
            <%= @information["name"] %>
        </h1>
        <p class="lead">
        The weather in <%= "#{@information["name"]}, #{@information["sys"]["country"]}" %> now is <mark>
        <%= @information["weather"][0]["description"] %></mark>
        </p>
    </div>
    <div class="col-md-3"></div>
</div>
<%- end %>

<div id="search" class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="form-group">
            <input type="text" class="form-control" id="cityName" placeholder="Enter City Name">
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
